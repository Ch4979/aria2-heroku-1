#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install aria2c"
BUILD_DIR=$1
VENDOR_DIR="vendor"
TAG_NAME="1.35.0_2020.05.03"
ARIA2_VER="1.35.0"
ARCH="amd64"
FILE="aria2-$ARIA2_VER-static-linux-$ARCH"
DOWNLOAD_URL="https://github.com/P3TERX/aria2-builder/releases/download/$TAG_NAME/$FILE.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p aria2c
cd aria2c
wget -q $DOWNLOAD_URL
tar xfzv $FILE.tar.gz
rm -rf $FILE.tar.gz

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/aria2c.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/aria2c"' >> $PROFILE_PATH
